<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Silly">
    
    <Style TargetType="{x:Type Control}" x:Key="Colors">
        <Setter Property="Background" Value="#1E1E1E" />
        <Setter Property="Foreground" Value="#DCDCDC"/>
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="{x:Type ItemsControl}" BasedOn="{StaticResource Colors}">
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource Colors}">
        <Setter Property="BorderBrush" Value="{x:Null}" />
    </Style>
</ResourceDictionary>